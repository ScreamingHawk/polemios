<%include ../templates/header %>
<%include ../templates/banner %>
<%include ../templates/errorBanner %>

<div class="container">
	<h2>Create Character</h2>
	<form method="POST" class="form-horizontal">
		<div class="form-group">
			<label for="name" class="col-sm-2 control-label">Name</label>
			<div class="col-sm-10">
				<input type="text" id="name" name="name" class="form-control" placeholder="Character Name" required="required" />
			</div>
		</div>
		<div class="form-group">
			<label for="name" class="col-sm-2 control-label">Race</label>
			<div class="col-sm-10">
				<select name="race" id="race" class="form-control" required="required">
					<option value=""></option>
					<% game.races.forEach(function(race){ %>
						<option value="<%= race.raceId %>"><%= race.name %></option>
					<% }); %>
				</select>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button type="submit" class="btn btn-success">Submit</button>
			</div>
		</div>
	</form>
</div>

